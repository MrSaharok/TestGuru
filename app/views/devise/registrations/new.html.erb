<h2><%= t('general.signup') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, t('.email') %><br/>
    <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="mb-4">
    <%= f.label :first_name, t('.first_name') %><br/>
    <%= f.text_field :first_name, id: :user_first_name, class: 'form-control' %>
  </div>

  <div class="mb-4">
    <%= f.label :last_name, t('.last_name') %><br/>
    <%= f.text_field :last_name, autofocus: true, id: :user_last_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :password, t('.password') %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "new-password", id: :user_password, class: 'form-control' %>
  </div>

  <div class="mb-5">
    <%= f.label :password_confirmation, t('.password_confirm') %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                         id: :user_password_confirmation, class: 'form-control' %>
    <em id="confirmation-alert" class="position-absolute"></em>
  </div>

  <div class="mb-3">
    <%= f.submit t('general.signup'), class: 'btn btn-primary btn-sm' %>
  </div>
  <%  end  %>

<%=  render "devise/shared/links" %>
