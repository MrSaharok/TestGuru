<div class="row justify-content-center">
  <h3><%= t('feedback.new.header') %></h3>
  <%= form_with url: feedback_index_path, method: :post do |f| %>

    <% unless current_user %>
      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :body, t('feedback.new.feedback'), class: 'form-label' %>
      <%= f.text_area :body, rows: 7, cols: 60, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.submit t('feedback_submit'), class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
  <div class="mb-3">
    <%= link_to root_path, class: 'btn btn-lg' do %>
      <%= content_tag :i, nil, class: 'bi bi-arrow-return-left' %>
      <%= t('general.back') %>
    <% end %>
  </div>
</div>